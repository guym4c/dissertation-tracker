<pretty-config xmlns="http://ocpsoft.org/schema/rewrite-config-prettyfaces" 
               xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
               xsi:schemaLocation="http://ocpsoft.org/schema/rewrite-config-prettyfaces 
                                   http://ocpsoft.org/xml/ns/prettyfaces/rewrite-config-prettyfaces.xsd">

    <url-mapping id="login">
            <pattern value="/login" />
            <view-id value="/faces/login.xhtml" />
    </url-mapping>
    <url-mapping id="logout">
            <pattern value="/logout" />
            <view-id value="/faces/logout.xhtml" />
    </url-mapping>
    
    <url-mapping id="supervisor">
            <pattern value="/supervisor/#{sussexId}" />
            <view-id value="/faces/supervisor/view.xhtml" />
    </url-mapping>
    <url-mapping id="supervisors">
            <pattern value="/supervisors" />
            <view-id value="/faces/supervisor/viewAll.xhtml" />
    </url-mapping>
    <url-mapping id="new-supervisor">
            <pattern value="/supervisors/new" />
            <view-id value="/faces/supervisor/new.xhtml" />
    </url-mapping>
    
    <url-mapping id="new-student">
            <pattern value="/students/new" />
            <view-id value="/faces/student/new.xhtml" />
    </url-mapping>
    <url-mapping id="supervisors">
            <pattern value="/students" />
            <view-id value="/faces/student/viewAll.xhtml" />
    </url-mapping>
    
    <url-mapping id="new-topic">
            <pattern value="/projects/topics/new" />
            <view-id value="/faces/project/newTopic.xhtml" />
    </url-mapping>
    <url-mapping id="new-project">
            <pattern value="/projects/new" />
            <view-id value="/faces/project/new.xhtml" />
    </url-mapping>
    <url-mapping id="projects">
            <pattern value="/projects" />
            <view-id value="/faces/project/viewAll.xhtml" />
    </url-mapping>
    
    <url-mapping id="events">
            <pattern value="/events" />
            <view-id value="/faces/events.xhtml" />
    </url-mapping>
</pretty-config>